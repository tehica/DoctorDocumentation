@model DoctorAndHospitalViewModel
@using DoctorDoc1.Extensions
@{
    ViewData["Title"] = "Edit Doctor";
}

<h1>Edit</h1>
<hr />
<br />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" method="post">
            <div class="font-weight-bold">

                <input type="hidden" asp-for="Doctor.Id" />

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Doctor.FirstName" class="custom-label"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Doctor.FirstName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Doctor.LastName" class="custom-label"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Doctor.LastName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Doctor.Gender" class="custom-label"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Doctor.Gender" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Doctor.PhoneNumber" class="custom-label"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Doctor.PhoneNumber" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Doctor.Email" class="custom-label"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Doctor.Email" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Doctor.HospitalId" class="col-form-label"></label>
                    </div>
                    <div class="col-6">
                        <select asp-for="Doctor.HospitalId"
                                asp-items="Model.HospitalList.ToSelectListItem(Model.Doctor.HospitalId)" class="form-control">
                            <option value="0">Choose hospital</option>
                        </select>
                        <span asp-validation-for="Doctor.HospitalId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-6 offset-2">
                        <partial name="_EditAndBackToListButtons" model="Model.Doctor.Id" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>