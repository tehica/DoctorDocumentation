@model HospitalAndCityViewModel
@using DoctorDoc1.Extensions

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Hospital</h1>
<hr />
<br />

<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" method="post">
            <!-- Dodana validacija za ažuriranje bolnica -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Hospital.Id" />

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Hospital.Name" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Hospital.Name" class="form-control" />
                    <span asp-validation-for="Hospital.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Hospital.CityId" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <select asp-for="Hospital.CityId"
                            asp-items="Model.CityList.ToSelectListItem(Model.Hospital.CityId)" class="form-control">
                        <option value="0">Choose city</option>
                    </select>
                    <span asp-validation-for="Hospital.CityId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6 offset-2">
                    <partial name="_EditAndBackToListButtons" model="Model.Hospital.Id" />
                </div>
            </div>

        </form>
    </div>
</div>