@model Hospital

@{
    ViewData["Title"] = "Hospital Details";
}

<h1>Hospital Details</h1>
<hr />
<br />

<div class="font-weight-bold">

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Id" class="custom-label"></label>
        </div>
        <div class="col-6">
            <input asp-for="Id" readonly class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name" class="custom-label"></label>
        </div>
        <div class="col-6">
            <input asp-for="Name" readonly class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="CityId" class="custom-label"></label>
        </div>
        <div class="col-6">
            <input asp-for="City.Name" readonly class="form-control" />
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-6 offset-2">
        <partial name="_DetailsAndBackToListButtons" model="Model.Id" />
    </div>
</div>
